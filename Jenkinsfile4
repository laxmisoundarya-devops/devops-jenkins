node{
  try{
    stage('SCM Checkout'){
    git 'https://github.com/laxmisoundarya-devops/devops-jenkins.git'
  }
  stage('Maven Build'){
   def mvnHome = tool name: 'Maven3', type: 'maven'
    sh "${mvnHome}/bin/mvn clean package"
  }
  }catch(err) {
    emailext body: "${err}", subject: 'failure', to: 'lsoundraya7@gmail.com'
  }
 }
